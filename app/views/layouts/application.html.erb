<!DOCTYPE html>
<html>
<head>
  <title>GaLibrary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "All Books", books_path %></li>

      <% if @current_user.present? %>
        <% if @current_user.admin? %>
          <li><%= link_to "Add Books", new_book_path %></li>
        <% end %>
        <li><%= link_to "Logout", login_path, :method => 'delete' %></li>
        <li><%= link_to "Welcome #{@current_user.name}!", dashboard_path %></li>
        <% if @current_user.admin? %>
          <% if request.path.start_with?('/dashboard') %>
            <ul>
              <li><a href="/dashboard">Requests</a></li>
              <li><a href="/dashboard/borrowed">Borrowed</a></li>
              <li><a href="/dashboard/wishlist">Wishlist</a></li>
            </ul>
            <!-- </%= tabs_tag do |tab| %>
              </%= tab.requests 'Requests', dashboard_path %>
              </%= tab.borrowed 'Borrowed', dashboard_borrowed_path %>
              </%= tab.wishlist 'Wishlist', dashboard_wishlist_path %>
            </% end %> -->
          <% end %>
        <% end %>
      <% else %>
        <li><%= link_to "Sign up", new_user_path %></li>
        <li><%= link_to "Sign in", login_path %></li>
      <% end %>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
