<div class="sign">
  <div class="form-group-wrapper">
    <h1>Sign In</h1>

    <% if flash[:error].present? %>
    <p><%= flash[:error] %></p>
    <% end %>


    <%= form_tag login_path do %>

      <div class="form-group">
          <%= label_tag 'Email' %>
          <%= email_field_tag :email, nil, :class => 'form-control'  %>
      </div>

      <div class="form-group">
          <%= label_tag 'Password' %>
          <%= password_field_tag :password, nil, :class => 'form-control' %>
      </div>
          <br>
          <%= submit_tag 'Sign in', :class => 'sign-button' %>

    <% end %>
    <div class="signup-redirect">Don't have an account? <%= link_to "Sign up", new_user_path %>
</div>

  </div>
</div>
