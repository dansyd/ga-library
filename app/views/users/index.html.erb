<% if flash[:message].present? %>
  <p class="flash"><%= flash[:message] %></p>
<% end %>

<table class="borrowed-head">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <% if user.borrowed_books.length == 0 && user.pending_books.length == 0 %>
          <td><%= button_to 'Delete User', user_path(user), method: :delete %></td>
        <% else %>
          <td><%= button_to 'Delete User', nil, disabled: true %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
